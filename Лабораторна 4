#include <iostream>
#include <iomanip>  // для fixed, setprecision
using namespace std;

int main() {
  
    float a = 2.3;
    float b = 2.3;
    double c = 2.123456;
    double d = 2.123456;
    double e = 2.123456;

    // Вивід згідно завдання
    cout << a << endl;                      // 2.3
    cout << fixed << setprecision(2) << b << endl; // 2.30
    cout << setprecision(6) << c << endl;   // 2.123456
    cout << fixed << setprecision(2) << d << endl; // 2.12
    cout << fixed << setprecision(0) << e << endl; // 2

    return 0;
}




8)



#include <iostream>
#include <cmath>
using namespace std;

int main() {
    double num1, num2;
    const double epsilon = 0.000001;

    cout << "Enter first number: ";
    cin >> num1;

    cout << "Enter second number: ";
    cin >> num2;

  
    if (num1 == 0 || num2 == 0) {
        cout << "Cannot divide by zero!" << endl;
        return 1;
    }

    double result1 = 1.0 / num1;
    double result2 = 1.0 / num2;

    
    bool mobius = false;
    if ((abs(num1 - 3.14159) < epsilon && abs(num2 - 1.61803) < epsilon) ||
        (abs(num1 - 1.61803) < epsilon && abs(num2 - 3.14159) < epsilon) ||
        (abs(num1 - 2.0) < epsilon && abs(num2 - 2.0) < epsilon)) {
        mobius = true;
    }

    
    if (mobius == true) {
        cout << "Comparing results (like a Mobius loop...)" << endl;
    } else if (fabs(result1 - result2) <= epsilon) {
        cout << "Results are equal (by 0.000001 epsilon)" << endl;
    } else {
        cout << "Results are not equal (by 0.000001 epsilon)" << endl;
    }

    return 0;
}





